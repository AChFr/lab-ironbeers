<main>
    <div class="container">
        <div class="row">

            {{#each theBeers}}

            <div class=" col-md-4 col-lg-3">

                <div class="container">
                    <a href="/beers/{{this.id}}">
                        <img src={{this.image_url}} alt="{{this.name}}" class="beerimg">
                        {{>beerpartial}}
                    </a>

                </div>
            </div>
            {{/each}}

        </div>
    </div>
</main>