<main class="smallPage">
    <div class="container">
        <div class="row">

            {{#each beer}}
            <div class="col">
                <div class="singleBeer">
                    <img src={{this.image_url}} alt="{{this.name}}" class="beerimg">
                    <div>
                        {{>beerpartial}}
                        <hr>
                        <span class="bold">Food Pairing</span>
                        <ul></ul>

                        {{#each food_pairing}}
                        <li>{{this}}</li>
                        {{/each}}
                        </ul>
                        <hr>
                        <p class="tips"><span class="bold">Brewers Tips:</span>{{this.brewers_tips}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>


</main>